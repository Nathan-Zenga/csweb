    <%_ include partials/header _%>
    <%_ artists.forEach((artist, i) => {
        var isEven = i % 2 == 0; _%>
    <div class="artist-bio content-container">
        <div class="content container">
            <div class="img-wrapper col-sm-5<%= (!isEven) ? ' col-sm-push-7' : '' %>">
                <div class="img" style="background-image: url(<%= artist.profile_image || '/img/cs-logo.png' %>)"></div>
            </div>
            <div class="text col-sm-7<%= (!isEven) ? ' col-sm-pull-5' : '' %>">
                <h1><%= artist.name.toUpperCase() %></h1>
                <%- "<p>" + artist.bio.replace(/\r?\n/g, "</p>\n<p>").replace(/<p><\/p>/g, "<br>") + "</p>" %>
                <br>
                <p class="socials">
                    <%- artist.socials.map(social => `<a target="_blank" href="${social.url}"><img class="social-icon" src="https://cdn.jsdelivr.net/npm/simple-icons@v2/icons/${social.name}.svg" alt="${artist.name} ${social.name} link"></a>` ).join(""); %>
                </p>
            </div>
        </div>
    </div>
    <%_ }) _%>
    <script> $(".social-icon").one("error", function() { $(this).remove() }); </script>
<%_ include partials/footer _%>
