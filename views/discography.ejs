<%_ include partials/header _%>
    <div class="container">
        <%_ projects.forEach((project, i) => { _%>
        <%- i == 0 || i % 3 == 0 ? '<div class="row">' : '' %>
        <div class="project-thumb content-container col-sm-4">
            <div class="content">
                <div class="img-wrapper">
                    <div class="img" style="background-image: url('<%= project.artwork %>');"></div>
                </div>
                <div class="text">
                    <h2 class="title" title="<%= project.title %>"><%= project.title %></h2>
                    <p><%= project.artist + " | " + project.year %></p>
                    <p>
                        OUT NOW
                    <%_ if (project.all_platforms && !project.links.length) { _%>
                        ON ALL PLATFORMS
                    <%_ } else if (project.links.length) { project.links.forEach(link => {
                        var socials = ["SoundCloud", "Spotify", "Tidal", "Apple", "Deezer", "Google Play", "Twitter", "Instagram", "Facebook", "Linktree"];
                        var social = socials.filter(s => link.includes( s.replace(" ", "-").toLowerCase() || link.includes(s.toLowerCase()) ))[0];
                        var tidal = "https://simpleicons.org/icons/tidal.svg";
                        social = social ? social.replace(" ", "-").toLowerCase() : ""; _%>
                        <span class="space" style="margin-right: 15px"></span>
                        <a class="socials-icon fab fa-<%= social %>" target="_blank" aria-hidden="true" href="<%= link %>"><%- social === "tidal" ? '<img style="height: 1.5em" src="'+ tidal +'">' : '' %></a>
                    <%_ })} _%>
                    </p>
                </div>
            </div>
        </div>
        <%- i == projects.length-1 || ((i + 1) % 3 == 0) ? '</div>' : '' %>
        <%_ }) _%>
    </div>
<%_ include partials/footer _%>
