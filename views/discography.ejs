<%- include ('partials/header') -%>
    <div class="container">
        <%_ projects.forEach((project, i) => { _%>
        <div class="project-thumb thumb content-container col-md-4 col-sm-6">
            <div class="content">
                <div class="img-wrapper">
                    <div class="img" style="background-image: url('<%= project.artwork %>');"></div>
                </div>
                <div class="text">
                    <h2 class="title" title="<%= project.title %>"><%= project.title %></h2>
                    <p><%= project.artist + " | " + project.year %></p>
                    <p>
                        OUT NOW
                    <%_ if (project.all_platforms && !project.links.length) { _%>
                        ON ALL PLATFORMS
                    <%_ } else if (project.links.length) { project.links.forEach(link => { _%>
                        <a class="link" target="_blank" href="<%= link.url %>"><img style="height: 1.5em; vertical-align: top" src="https://cdn.jsdelivr.net/npm/simple-icons@v2/icons/<%- link.name %>.svg"></a>
                    <%_ })} _%>
                    </p>
                </div>
            </div>
        </div>
        <%- ((i + 1) % 3 == 0) ? '<div class="breakpoint row dt-view-md"></div>' : '' %>
        <%_ }) _%>
    </div>
    <style> .text .link { margin-left: 10px; } </style>
<%- include ('partials/footer') -%>
