<%_ include partials/header _%>
    <%_ include partials/stripe-checkout-css _%>
    <div class="content-container" id="payment-form-container">
        <div class="content container">
            <form id="payment-details-form" action="/shop/checkout/payment-intent/create">
                <div class="input-group row" style="display: block">
                    <div class="col-sm-6">
                        <label for="firstname">FIRST NAME</label>
                        <input type="text" name="firstname" id="firstname" required>
                    </div>
                    <div class="col-sm-6">
                        <label for="lastname">LAST NAME</label>
                        <input type="text" name="lastname" id="lastname" required>
                    </div>
                </div>
                <label for="email">EMAIL</label>
                <input type="email" name="email" id="email" required>
                <label for="address">ADDRESS</label>
                <input type="text" name="address" id="address" placeholder="Street / PO Box" required>
                <div class="input-group row" style="display: block">
                    <div class="col-sm-6">
                        <label for="city">CITY</label>
                        <input type="text" name="city" id="city" required>
                    </div>
                    <div class="col-sm-6">
                        <label for="postcode">POST / ZIP CODE <span>(OPTIONAL)</span></label>
                        <input type="text" name="postcode" id="postcode" required>
                    </div>
                </div>
                <input type="submit" value="CONTINUE TO PAYMENT">
            </form>

            <form id="payment-form" style="display: none;">
                <label for="card-element">ENTER PAYMENT DETAILS</label>
                <div id="card-element"></div>
                <input type="submit" id="submit-payment-btn" value="PAY">

                <p id="card-error" role="alert"></p>
                <p id="result-message" class="hidden">
                    Payment succeeded!<br><br>A reciept has been forwarded to your email address.<br><br>Thank you for your purchase!
                </p>
            </form>
        </div>
    </div>

    <style> form + form { padding-top: 0; margin-top: -2em; } </style>

    <script src="https://js.stripe.com/v3/"></script>
    <script>
        $("#payment-details-form").one("submit", function(e) {
            e.preventDefault();
            var stripe = Stripe("<%= pk %>");
            var btnControl = new submitBtnController(this);
            $.post(this.action, $(this).serializeArray(), function(data) {
                $("input", e.target).attr("disabled", true).filter(":submit").remove();
                $("#submit-payment-btn").attr("disabled", true);
                $("#payment-form").show(0, function() {
                    var card = stripe.elements().create("card", { style: {
                        base: { // input fields
                            color: "#32325d",
                            fontFamily: 'Arial, sans-serif',
                            fontSmoothing: "antialiased",
                            fontSize: "16px",
                            "::placeholder": { color: "#32325d" }
                        },
                        invalid: { // input fields (invalid)
                            fontFamily: 'Arial, sans-serif',
                            color: "#fa755a",
                            iconColor: "#fa755a"
                        }
                    }});
                    card.mount("#card-element"); // Stripe injects an iframe into the DOM
                    card.on("change", function(e) {
                        // Disable the Pay button if there are no card details in the Element
                        $("#submit-payment-btn").attr("disabled", e.empty);
                        $("#card-error").prop("textContent", e.error ? e.error.message : "");
                    });
                    btnControl.finish();

                    $("#payment-form").one("submit", function(e) {
                        e.preventDefault();
                        // Complete payment when the submit button is clicked
                        var btnControl = new submitBtnController(this);
                        $("#submit-payment-btn").attr("disabled", true);
                        stripe.confirmCardPayment(data.clientSecret, { payment_method: { card } }).then(function(res) {
                            btnControl.finish();
                            $("#submit-payment-btn").attr("disabled", false);
                            if (res.error) return showError(res.error.message);
                            $("#cart-item-count").text(0);
                            $.post("/shop/checkout/payment-intent/complete").fail(function(err, status, codeMessage) {
                                console.log(codeMessage + (err ? ": " + err.responseText : ""));
                            }).always(function() {
                                $("html, body").animate({ scrollTop: 0 }, function() {
                                    $("#payment-form-container form").fadeOut(function() {
                                        var css = { display: "none", padding: "2em 0", textAlign: "center", fontWeight: "bold" };
                                        $(".content").append($("#result-message").clone().removeClass("hidden").css(css).fadeIn());
                                    });
                                });
                            });
                        });
                    });
                });
            }).fail(function(err, status, codeMessage) {
                btnControl.finish();
                alert(codeMessage + (err ? ": " + err.responseText : ""));
            });

            var showError = function(errorMsgText) {
                // Show the customer the error from Stripe if their card fails to charge
                var errorMsg = $("#card-error").get(0);
                errorMsg.textContent = errorMsgText;
                setTimeout(function() { errorMsg.textContent = "" }, 4000);
            };
        })
    </script>
<%_ include partials/footer _%>