<form method="post" action="/news/article/new">
    <label>HEADLINE</label>
    <div class="text-emphasis-styles" data-id="headline">
        <button><i>I</i></button><button><u>U</u></button>
    </div>
    <input type="text" name="headline" id="headline" required>
    <div class="input-group" style="display: block">
        <div class="col-sm-3"><label>MAIN IMAGE(S):</label></div>
        <div class="col-sm-9"><input type="file" name="headline_images" id="headline_images" accept="image/*" multiple></div>
    </div>
    <div class="input-group headline-image-thumb-choice" style="display: none"></div>
    <label>ARTICLE BODY <br><span>Place an "X" on a separate line to your spot for any additional images/videos to upload.</span></label>
    <div class="text-emphasis-styles" data-id="textbody">
        <button><b>B</b></button><button><i>I</i></button><button><u>U</u></button>
    </div>
    <textarea name="textbody" id="textbody" rows="10" required></textarea>
    <div class="input-group" id="textbody_media"></div>
    <input type="submit" value="POST">
</form>
