<form method="post" action="/shop/stock/add">
    <label>PRODUCT NAME</label>
    <input type="text" name="name" id="product-name" required>

    <label>PRICE (GBP Â£)</label>
    <input type="number" name="price" id="price" min="0.01" step="0.01" required>

    <label>CATEGORY</label>
    <div class="row">
        <%_ product_categories.forEach(category => { _%>
        <div class="col-md-4 col input-group list-item">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input type="radio" name="category" id="product_category_<%= category %>" value="<%= category %>" required>
                </div>
            </div>
            <label class="form-control list-item-label" for="product_category_<%= category %>"><%= category.replace(/^./, m => m.toUpperCase()) %></label>
        </div>
        <%_ }) _%>
    </div>

    <fieldset class="stock-qty">
        <label>TOTAL IN STOCK</label>
        <input type="number" name="stock_qty" id="stock_qty" min="1" value="1" required>
    </fieldset>

    <fieldset class="stock-qty-per-size" disabled hidden>
        <label>TOTAL IN STOCK PER SIZE</label>
        <%_ sizes.forEach(size => { _%>
        <div class="row no-gutters">
            <div class="col-2">
                <label><%= size %></label>
            </div>
            <div class="col">
                <div class="input-group">
                    <input class="form-control" id="size_<%= size %>" type="number" name="<%= size %>" min="0" required>
                </div>
            </div>
        </div>
        <%_ }) _%>
    </fieldset>

    <label>PRODUCT INFO <span>(OPTIONAL)</span></label>
    <input type="text" name="info" id="product_info"></input>

    <label>PRODUCT IMAGE</label>
    <div class="file-upload-container">
        <div class="input-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="product-image-file" accept="image/*">
                <label class="custom-file-label">Choose image</label>
            </div>
            <div class="input-group-append">
                <input type="hidden" name="image_file">
                <button class="btn btn-secondary clear-uploads" type="button" data-id="product-image-file">Clear</button>
            </div>
        </div>
        <input type="url" name="image_url" id="product-image-url" placeholder="Or enter the image URL">
    </div>

    <input type="submit" value="SAVE">
</form>
