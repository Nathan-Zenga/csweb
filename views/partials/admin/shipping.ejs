<form method="post" action="/shop/shipping/add">
    <label>METHOD NAME</label>
    <input type="text" name="name" id="shipping-method-name" required>

    <label>FEE (GBP Â£)</label>
    <input type="number" name="fee" id="shipping-fee" min="0" step="0.01" required>

    <label>DELIVERY ESTIMATES</label>
    <fieldset class="delivery-estimates">
        <label>BETWEEN:</label>
        <div class="row">
            <div class="col">
                <input type="number" name="min_value" id="min-value" min="1" value="5" required>
            </div>
            <div class="col">
                <select class="custom-select" name="min_unit" id="min-unit" required>
                    <option value="hour">Hours</option>
                    <option value="business day">Business days</option>
                    <option value="week">Weeks</option>
                    <option value="month">Months</option>
                </select>
            </div>
        </div>

        <label>TO:</label>
        <div class="row">
            <div class="col">
                <input type="number" name="max_value" id="max-value" min="1" value="7" required>
            </div>
            <div class="col">
                <select class="custom-select" name="max_unit" id="max-unit" required>
                    <option value="hour">Hours</option>
                    <option value="business day">Business days</option>
                    <option value="week">Weeks</option>
                    <option value="month">Months</option>
                </select>
            </div>
        </div>
    </fieldset>

    <input type="submit" value="SAVE">
</form>
