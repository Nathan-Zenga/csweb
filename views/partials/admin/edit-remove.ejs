<%_ var { artists, projects, articles, locations, members, homepage_images } = db; _%>
<div class="col-sm-3" id="edit-remove-sidebar">
    <div class="mb-view" id="edit-remove-dropdown-options" style="font-weight: bold; max-width: 250px; margin: 0 auto">
        <label>SELECT OPTION</label>
        <select >
            <option value="#edit-artist">EDIT ARTIST</option>
            <option value="#edit-article">EDIT ARTICLE</option>
            <option value="#edit-project">EDIT PROJECT</option>
            <option value="#edit-location">EDIT LOCATION</option>
            <option value="#edit-member">EDIT MEMBER</option>
            <option value="#edit-homepage-image">REORDER HOMEPAGE IMAGE</option>
            <option value="#remove-artist">REMOVE ARTIST</option>
            <option value="#remove-article">REMOVE ARTICLE</option>
            <option value="#remove-project">REMOVE PROJECT</option>
            <option value="#remove-location">REMOVE LOCATION</option>
            <option value="#remove-member">REMOVE MEMBER</option>
            <option value="#remove-homepage-image">REMOVE HOMEPAGE IMAGE</option>
        </select>
    </div>
    <ul class="nav nav-pills nav-stacked dt-view">
        <li class="active"><a data-toggle="pill" href="#edit-artist">EDIT ARTIST</a></li>
        <li><a data-toggle="pill" href="#edit-article">EDIT ARTICLE</a></li>
        <li><a data-toggle="pill" href="#edit-project">EDIT PROJECT</a></li>
        <li><a data-toggle="pill" href="#edit-location">EDIT LOCATION</a></li>
        <li><a data-toggle="pill" href="#edit-member">EDIT MEMBER</a></li>
        <li><a data-toggle="pill" href="#edit-homepage-image">REORDER HOMEPAGE IMAGE</a></li>
        <br>
        <li><a data-toggle="pill" href="#remove-artist">REMOVE ARTIST</a></li>
        <li><a data-toggle="pill" href="#remove-article">REMOVE ARTICLE</a></li>
        <li><a data-toggle="pill" href="#remove-project">REMOVE PROJECT</a></li>
        <li><a data-toggle="pill" href="#remove-location">REMOVE LOCATION</a></li>
        <li><a data-toggle="pill" href="#remove-member">REMOVE MEMBER</a></li>
        <li><a data-toggle="pill" href="#remove-homepage-image">REMOVE HOMEPAGE IMAGE</a></li>
    </ul>
</div>
<div class="col-sm-9">
    <div class="tab-content" style="padding-top: 10px;">
        <div id="edit-artist" class="tab-pane fade in active">
            <form method="post" action="/artists/edit">
                <label>CHOOSE ARTIST</label>
                <select name="artist_id" id="artist_id" required>
                    <option value=""></option>
                    <%_ artists.forEach(artist => { _%>
                    <option value="<%= artist._id %>"><%= artist.name %></option>
                    <%_ }) _%>
                </select>
                <label>NAME</label>
                <input type="text" name="name" id="artist_name_edit">
                <label>BIO</label>
                <div class="text-emphasis-styles" data-id="artist_bio_edit">
                    <button><b>B</b></button><button><i>I</i></button><button><u>U</u></button>
                </div>
                <textarea type="text" name="artist_bio" id="artist_bio_edit" rows="5"></textarea>
                <label>PROFILE PICTURE (OPTIONAL)</label>
                <div class="input-group row" style="display: block">
                    <div class="col-sm-6 col-xs-9"><input type="file" name="profile_image" id="profile_image_change" accept="image/*"></div>
                    <div class="col-sm-6 col-xs-3"><button class="clear-uploads" data-id="profile_image_change">CLEAR</button></div>
                </div>
                <label>SOCIAL MEDIA LINKS</label>
                <div class="social-media-input-group input-group row" style="display: block">
                    <div class="social-media-input input-item">
                        <div class="col-sm-4">
                            <select name="social_media_name" class="social-media-name edit">
                                <option value="">Choose social</option>
                                <%_ ["Twitter", "Instagram", "Facebook", "Spotify", "SoundCloud", "Apple Music", "Tidal", "Bandcamp", "Deezer", "Google Play", "Linktree"].forEach(social => { _%>
                                <option value="<%= social.toLowerCase().replace(/ /g, '_') %>"><%= social %></option>
                                <%_ }) _%>
                            </select>
                        </div>
                        <div class="col-sm-8">
                            <input type="url" name="social_media_url" class="social-media-url edit" placeholder="Enter URL">
                        </div>
                        <div class="col-sm-12" style="text-align: right; margin-top: -1em;">
                            <button class="add">ADD</button>
                            <button class="remove">REMOVE</button>
                        </div>
                    </div>
                </div>
                <input type="submit" value="UPDATE ARTIST">
            </form>
        </div>

        <div id="edit-article" class="tab-pane fade">
            <form method="post" action="/news/article/edit">
                <label>CHOOSE ARTICLE</label>
                <select name="article_id" id="article_id" required>
                    <option value=""></option>
                    <%_ articles.forEach(article => { _%>
                    <option value="<%= article._id %>"><%= article.headline %></option>
                    <%_ }) _%>
                </select>
                <label>HEADLINE</label>
                <div class="text-emphasis-styles" data-id="headline_edit">
                    <button><i>I</i></button><button><u>U</u></button>
                </div>
                <input type="text" name="headline_edit" id="headline_edit">
                <label>MAIN IMAGE(S) (OPTIONAL)</label>
                <div class="input-group row" style="display: block">
                    <div class="col-sm-6 col-xs-9"><input type="file" name="headline_images_change" id="headline_images_change" accept="image/*" multiple></div>
                    <div class="col-sm-6 col-xs-3"><button class="clear-uploads" data-id="headline_images_change">CLEAR</button></div>
                </div>
                <div class="input-group headline-image-thumb-choice" style="display: none"></div>
                <label>ARTICLE BODY <br><span>Place an "X" on a separate line to your spot for any additional images/videos to upload.</span></label>
                <div class="text-emphasis-styles" data-id="textbody_edit">
                    <button><b>B</b></button><button><i>I</i></button><button><u>U</u></button>
                </div>
                <textarea name="textbody_edit" id="textbody_edit" rows="10"></textarea>
                <div class="input-group textbody_media"></div>
                <input type="submit" value="UPDATE ARTICLE">
            </form>
        </div>

        <div id="edit-project" class="tab-pane fade">
            <form action="/discography/project/edit">
                <label>CHOOSE PROJECT</label>
                <select name="project_id" id="project_id" required>
                    <option value=""></option>
                    <%_ projects.forEach(project => { _%>
                    <option value="<%= project._id %>"><%= project.title %></option>
                    <%_ }) _%>
                </select>
                <label>ARTWORK</label>
                <div class="artwork-upload input-group row" style="display: block">
                    <div class="col-sm-6 col-xs-9"><input type="file" name="artwork_file_change" id="artwork_file_change" accept=".jpg,.jpeg,.png,.bmp"></div>
                    <div class="col-sm-6 col-xs-3"><button class="clear-uploads" data-id="artwork_file_change">CLEAR</button></div>
                    <div class="col-sm-12"><input type="url" name="artwork_url_edit" id="artwork_url_edit" placeholder="Or enter the image URL"></div>
                </div>
                <label>TITLE</label>
                <input type="text" name="title_edit" id="title_edit">
                <label>ARTIST</label>
                <input type="text" name="artist_edit" id="artist_edit">
                <label>YEAR</label>
                <%_ var thisYear = new Date().getFullYear(); _%>
                <input type="number" name="year_edit" id="year_edit" min="2000" max="<%= thisYear %>" value="<%= thisYear %>">
                <label>LINKS (OPTIONAL)</label>
                <div class="link-item-group input-group row" style="display: block">
                    <div class="link-item input-item">
                        <div class="row"><input type="url" name="links_edit" class="link" placeholder="Enter URL"></div>
                        <div class="row" style="text-align: right; margin: -1em 0 1em;">
                            <button class="add">ADD</button>
                            <button class="remove">REMOVE</button>
                        </div>
                    </div>
                </div>
                <label><span>In case you think entering every link is unnecessary</span></label>
                <input type="checkbox" name="all_platforms_change" id="all_platforms_change"> <b>ALL PLATFORMS?</b> <br>
                <input type="submit" value="UPDATE PROJECT">
            </form>
        </div>

        <div id="edit-location" class="tab-pane fade">
            <form method="post" action="/map/location/edit">
                <label>CHOOSE LOCATION</label>
                <select name="location_id" id="location_id" required>
                    <option value=""></option>
                    <%_ locations.forEach(location => { _%>
                    <option value="<%= location._id %>"><%= location.name +" - "+ location.city +", "+ location.country %></option>
                    <%_ }) _%>
                </select>

                <label>NAME</label>
                <input type="text" name="name_edit" id="location_name_edit" required>

                <label>STREET ADDRESS / BOROUGH / AREA</label>
                <input type="text" name="street_address_edit" id="street_address_edit" required>

                <label>CITY</label>
                <input type="text" name="city_edit" id="city_edit" required>

                <label>STATE / COUNTRY</label>
                <input type="text" name="country_edit" id="country_edit" required>

                <label>ZIP / POST CODE (OPTIONAL)</label>
                <input type="text" name="postcode_edit" id="postcode_edit">

                <input type="submit" value="UPDATE LOCATION">
            </form>
        </div>

        <div id="edit-member" class="tab-pane fade">
            <form method="POST" action="/mailing-list/update">
                <label>CHOOSE MEMBER</label>
                <select name="member_id" id="member_id">
                    <option value=""></option>
                    <%_ members.forEach(member => { _%>
                    <option value="<%= member._id %>"><%= member.firstname + " " + member.lastname %></option>
                    <%_ }) _%>
                </select>
                <div class="input-group" style="display: block">
                    <div class="col-sm-6">
                        <label>FIRST NAME</label>
                        <input type="text" name="firstname" id="firstname_edit" required>
                    </div>
                    <div class="col-sm-6">
                        <label>LAST NAME</label>
                        <input type="text" name="lastname" id="lastname_edit" required>
                    </div>
                </div>
                <label>EMAIL</label>
                <input type="email" name="email" id="email_edit" required>
                <div class="input-group" style="display: block">
                    <%_ var sizes = ["XS", "S", "M", "L", "XL"]; _%>
                    <div class="col-sm-6">
                        <label>SIZE (TOP)</label>
                        <select name="size_top" id="size_top_edit" required>
                            <option value="">Select size</option>
                            <%_ sizes.forEach(size => { _%>
                            <option value="<%= size %>"><%= size %></option>
                            <%_ }) _%>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label>SIZE (BOTTOMS)</label>
                        <select name="size_bottom" id="size_bottom_edit" required>
                            <option value="">Select size</option>
                            <%_ sizes.forEach(size => { _%>
                            <option value="<%= size %>"><%= size %></option>
                            <%_ }) _%>
                        </select>
                    </div>
                </div>
                <label>EXTRA INFO (OPTIONAL)</label>
                <textarea name="extra_info" id="extra_info_edit"></textarea>
                <input type="submit" value="UPDATE MAILING LIST">
            </form>
        </div>

        <div id="edit-homepage-image" class="tab-pane fade">
            <%_ if (homepage_images.length) { _%>
            <form action="/homepage/image/reorder" method="post">
                <label>SELECT HOMEPAGE IMAGE TO RE-ORDER</label><br>
                <%_ homepage_images.forEach((image, i) => { _%>
                <div class="homepage-image-container" style="display: inline-block">
                    <input type="radio" name="id" value="<%= image._id %>" required>
                    <span><img style="height: 100px; margin-bottom: 10px;" src="<%= image.url %>" alt="<%= image.p_id.replace('homepage/images/', '') %>"></span>
                </div>
                <%_ }) _%>
                <br><br>
                <div class="input-group" style="display: block">
                    <div class="col-sm-4"><label>POSITION NUMBER</label></div>
                    <div class="col-sm-8"><input type="number" name="index" min="1" max="<%= homepage_images.length %>" required></div>
                </div>
                <input type="submit" value="RE-ORDER IMAGE">
            </form>
            <%_ } else { _%>
            <p style="text-align: center; margin-top: 2em"><b>NO IMAGES TO RE-ORDER</b></p>
            <%_ } _%>
        </div>

        <div id="remove-artist" class="tab-pane fade">
            <%_ if (artists.length) { _%>
            <form action="artists/delete" method="post">
                <label>ARTISTS</label>
                <%_ artists.forEach((artist, i) => { _%>
                <input type="checkbox" name="artist<%= i %>" value="<%= artist._id %>"> <span><%= artist.name %></span><br>
                <%_ }) _%>
                <br>
                <input type="submit" value="DELETE ARTISTS">
            </form>
            <%_ } else { _%>
            <p style="text-align: center; margin-top: 2em"><b>NO ARTISTS TO DELETE</b></p>
            <%_ } _%>
        </div>

        <div id="remove-project" class="tab-pane fade">
            <%_ if (projects.length) { _%>
            <form action="discography/project/delete" method="post">
                <label>PROJECTS</label>
                <%_ projects.forEach((project, i) => { _%>
                <input type="checkbox" name="project<%= i %>" value="<%= project._id %>"> <span><%= project.title %></span><br>
                <%_ }) _%>
                <br>
                <input type="submit" value="DELETE PROJECTS">
            </form>
            <%_ } else { _%>
            <p style="text-align: center; margin-top: 2em"><b>NO PROJECTS TO DELETE</b></p>
            <%_ } _%>
        </div>

        <div id="remove-article" class="tab-pane fade">
            <%_ if (articles.length) { _%>
            <form action="news/article/delete" method="post">
                <label>ARTICLES</label>
                <%_ articles.forEach((article, i) => { _%>
                <input type="checkbox" name="article<%= i %>" value="<%= article._id %>"> <span><%= article.headline %></span><br>
                <%_ }) _%>
                <br>
                <input type="submit" value="DELETE ARTICLES">
            </form>
            <%_ } else { _%>
            <p style="text-align: center; margin-top: 2em"><b>NO ARTICLES TO DELETE</b></p>
            <%_ } _%>
        </div>

        <div id="remove-location" class="tab-pane fade">
            <%_ if (locations.length) { _%>
            <form action="map/location/delete" method="post">
                <label>LOCATION</label>
                <%_ locations.forEach((location, i) => { _%>
                <input type="checkbox" name="location<%= i %>" value="<%= location._id %>"> <span><%- "<b>"+ location.name +"</b> - "+ location.city +", "+ location.country %></span><br>
                <%_ }) _%>
                <br>
                <input type="submit" value="DELETE LOCATIONS">
            </form>
            <%_ } else { _%>
            <p style="text-align: center; margin-top: 2em"><b>NO LOCATIONS TO DELETE</b></p>
            <%_ } _%>
        </div>

        <div id="remove-member" class="tab-pane fade">
            <%_ if (members.length) { _%>
            <form action="/mailing-list/member/delete" method="post">
                <label>MAILING LIST MEMBERS</label>
                <%_ members.forEach((member, i) => { _%>
                <input type="checkbox" name="member<%= i %>" value="<%= member._id %>"> <span><%= member.firstname +" "+ member.lastname %></span><br>
                <%_ }) _%>
                <br>
                <input type="submit" value="REMOVE MEMBERS">
            </form>
            <%_ } else { _%>
            <p style="text-align: center; margin-top: 2em"><b>NO MEMBERS TO REMOVE</b></p>
            <%_ } _%>
        </div>

        <div id="remove-homepage-image" class="tab-pane fade">
            <%_ if (homepage_images.length) { _%>
            <form action="/homepage/image/delete" method="post">
                <label>HOMEPAGE IMAGES</label><br>
                <%_ homepage_images.forEach((image, i) => { _%>
                <div style="display: inline-block">
                    <input type="checkbox" name="image<%= i %>" value="<%= image.p_id %>">
                    <span><img style="height: 100px; margin-bottom: 10px;" src="<%= image.url %>" alt="<%= image.p_id.replace('homepage/images/', '') %>"></span>
                </div>
                <%_ }) _%>
                <br><br>
                <input type="submit" value="DELETE IMAGES">
            </form>
            <%_ } else { _%>
            <p style="text-align: center; margin-top: 2em"><b>NO IMAGES TO DELETE</b></p>
            <%_ } _%>
        </div>
    </div>
</div>
