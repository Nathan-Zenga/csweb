<form method="post" action="/discography/project/new">
    <label>ARTWORK</label>
    <div class="artwork-upload input-group row" style="display: block">
        <div class="col-sm-6 col-xs-9"><input type="file" name="artwork_file" id="artwork_file" accept=".jpg,.jpeg,.png,.bmp" required></div>
        <div class="col-sm-6 col-xs-3"><button class="clear-uploads" data-id="artwork_file">CLEAR</button></div>
        <div class="col-sm-12"><input type="url" name="artwork_url" id="artwork_url" placeholder="Or enter the image URL"></div>
    </div>

    <label>TITLE</label>
    <input type="text" name="title" id="title" required>

    <label>ARTIST</label>
    <input type="text" name="artist" id="artist" required>

    <label>YEAR</label>
    <%_ var thisYear = new Date().getFullYear(); _%>
    <input type="number" name="year" id="year" min="2000" max="<%= thisYear %>" value="<%= thisYear %>" required>

    <label>LINKS (OPTIONAL)</label>
    <div class="link-items-group input-group row" style="display: block">
        <div class="link-item">
            <div class="row"><input type="url" name="links" class="link" placeholder="Enter the image URL" required></div>
            <div class="row" style="text-align: right; margin: -1em 0 1em;">
                <button class="add">ADD</button>
                <button class="remove">REMOVE</button>
            </div>
        </div>
    </div>

    <label><span>In case you think entering every link is unnecessary</span></label>
    <input type="checkbox" name="all_platforms" id="all_platforms"> <b>ALL PLATFORMS?</b> <br>

    <input type="submit" value="SAVE">
</form>
