<form method="post" action="/mailing-list/send/mail">
    <label>CHOOSE RECIPIENT <i class="fas fa-chevron-down"></i></label>
    <select name="email" id="recipient_email" required>
        <option value="">-</option>
        <option value="all">EVERYONE</option>
        <%_ members.forEach(member => { _%>
        <option value="<%= member.email %>"><%= member.firstname +" "+ member.lastname %></option>
        <%_ }) _%>
    </select>
    <div id="recipient_details"></div>

    <label>SUBJECT</label>
    <input type="text" name="subject" id="subject" required>

    <label>MESSAGE</label>
    <textarea name="message" id="message" rows="10" required></textarea>

    <input type="submit" value="SEND">
</form>
