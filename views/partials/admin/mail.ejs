<form method="post" action="/mailing-list/send/mail">
    <label>SUBJECT</label>
    <input type="text" name="subject" id="subject" required>

    <label>
        MESSAGE<br>
        <span>
            Type the following as placeholders (without quotes):<br>
            "=FN=" : first name<br>
            "=LN=" : last name<br>
            "=ST=" : size top<br>
            "=SB=" : size bottom
        </span>
    </label>
    <textarea name="message" id="message" rows="10" required></textarea>

    <input type="submit" value="SEND">
</form>
