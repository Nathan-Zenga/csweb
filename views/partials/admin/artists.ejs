<form method="post" action="/artists/new">
    <label>NAME</label>
    <input type="text" name="name" id="artist_name" required>
    <label>BIO</label>
    <div class="text-emphasis-styles" data-id="bio">
        <button><b>B</b></button><button><i>I</i></button><button><u>U</u></button>
    </div>
    <textarea type="text" name="bio" id="bio" rows="5" required></textarea>
    <label>PROFILE PICTURE (OPTIONAL)</label>
    <div class="input-group row" style="display: block">
        <div class="col-sm-6 col-xs-9"><input type="file" name="profile_image" id="profile_image" accept="image/*"></div>
        <div class="col-sm-6 col-xs-3"><button class="clear-uploads" data-id="profile_image">CLEAR</button></div>
    </div>

    <label>SOCIAL MEDIA LINKS</label>
    <div class="input-group social-media-input-group row" style="display: block">
        <div class="col-sm-4">
            <select name="social_media_name" class="social-media-name">
                <option value="">Choose social</option>
                <%_ ["Twitter", "Instagram", "Facebook", "Spotify", "SoundCloud", "Apple Music", "Tidal", "Bandcamp", "Deezer", "Google Play", "Linktree"].forEach(social => { _%>
                <option value="<%= social.toLowerCase().replace(/ /g, '_') %>"><%= social %></option>
                <%_ }) _%>
            </select>
        </div>
        <div class="col-sm-8">
            <input type="url" name="social_media_url" class="social-media-url" placeholder="Enter URL">
        </div>
        <div class="col-sm-12" style="text-align: right; margin-top: -1em;">
            <button class="add">ADD</button>
            <button class="remove">REMOVE</button>
        </div>
    </div>

    <input type="submit" value="SAVE">
</form>
