<form method="post" action="/team/new">
    <label>NAME</label>
    <input type="text" name="name" id="artist_name" required>
    <label>BIO</label>
    <div class="text-emphasis-styles" data-id="bio">
        <button><b>B</b></button><button><i>I</i></button><button><u>U</u></button>
    </div>
    <textarea type="text" name="bio" id="bio" rows="5" required></textarea>
    <label>PROFILE PICTURE (OPTIONAL)</label>
    <div class="file-upload-container">
        <div class="input-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="profile_image" accept="image/*">
                <label class="custom-file-label">Choose image</label>
            </div>
            <div class="input-group-append">
                <input type="hidden" name="profile_image">
                <button class="btn btn-secondary clear-uploads" type="button" data-id="profile_image">Clear</button>
            </div>
        </div>
    </div>

    <label>SOCIAL MEDIA LINKS</label>
    <div class="social-media-input-group input-item-group">
        <div class="social-media-input input-item">
            <div class="input-group">
                <select class="form-control custom-select social-media-name" name="social_media_name">
                    <option value="">Choose social</option>
                    <%_ platforms.forEach(social => { _%>
                    <option value="<%= social.toLowerCase().replace(/[ _]/g, '') %>"><%= social %></option>
                    <%_ }) _%>
                </select>
                <input type="url" name="social_media_url" class="form-control social-media-url" placeholder="Enter URL">
            </div>
            <div class="input-group opt-btn-group">
                <button type="button" class="form-control add">Add</button>
                <button type="button" class="form-control remove">Remove</button>
            </div>
        </div>
    </div>

    <input type="submit" value="SAVE">
</form>
