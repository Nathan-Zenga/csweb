<%_ include partials/header _%>
	<section>
		<div class="banner-container content-container">
			<div class="banner content">
				<%_ if (content) { _%>
				<div class="banner-item">
					<div class="banner-text"><%= content.banner_text %></div>
					<%_ content.banner_media.forEach(url => { _%>
					<img class="banner-item-media" src="<%= url %>">
					<%_ }) _%>
				</div>
				<%_ } _%>
			</div>
		</div>
	</section>
	<section class="homepage-images-section container">
		<%_ images.forEach(img => { _%>
		<div class="homepage-images content-container col-md-4 col-sm-6"><div class="image content" style="background-image: url(<%= img.url %>)"></div></div>
		<%_ }) _%>
	</section>

	<%_ if (content) { _%>
	<section class="homepage-footnote-text container"><%- content.footnote_text %></section>
	<%_ } _%>

	<script>
		var banner_html = $(".banner").html();
		while ($(".banner-item:last").offset().left <= window.innerWidth) $(".banner").append(banner_html);
		banner_html = $(".banner").html();

		$(".banner").scroll(function() {
			var $last = $(".banner-item:last");
			var lastOffsetLeft = $last.offset().left;
			if (lastOffsetLeft < window.innerWidth) $last.clone().appendTo(".banner");
		});

		(function banner_autoplay() {
			$(".banner").animate({scrollLeft: "+=1500" }, 20000, "linear", banner_autoplay);
		})();
	</script>
<%_ include partials/footer _%>
